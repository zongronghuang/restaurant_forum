<h1>人氣餐廳</h1>
<hr />
<div class="d-flex-column" style="text-align: center;">
  {{#each restaurants}}

    <div class="card mb-3 mx-auto" style="max-width: 540px;">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="{{this.image}}" class="card-img" alt="{{this.name}}">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="text-white bg-secondary"><small>收藏數：</small><span>{{this.FavoritedUserCount}}</span></p>
            <p class="card-text">{{this.description}}</p>

            <div>
              <a class="btn btn-primary" href="/restaurants/{{this.id}}">詳細資訊</a>
              {{#if this.isFavorited}}
                <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button
                    type="submit" class="btn btn-danger mr-2">移除最愛</button>
                </form>
              {{else}}
                <form action="/favorite/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
                    class="btn btn-primary mr-2">加到最愛</button>
                </form>
              {{/if}}

            </div>
          </div>
        </div>
      </div>
    </div>

  {{/each}}
</div>