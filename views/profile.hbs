<div class="card mb-3 w-100">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{profileOwner.image}}" class="card-img w-75 mx-2 my-2" alt="user image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{profileOwner.name}}</h5>
        <p class="card-text">{{profileOwner.email}}</p>

        {{#if editRight}}
          <a class="btn btn-primary" href="/users/{{profileOwner.id}}/edit">Edit Profile</a>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<div class="card w-100">
  <div class="card-header font-weight-bold">
    {{count}} commented restaurants
  </div>
  <div class="card-body d-flex">

    {{#each restaurants}}
      <div class="mr-3">
        <a href="/restaurants/{{this.id}}">
          <img src="{{this.image}}" style="width: 200px;">
          <p>{{this.name}}</p>
        </a>
      </div>
    {{/each}}

  </div>
</div>