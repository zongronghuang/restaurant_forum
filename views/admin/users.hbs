<h1>餐廳後台</h1>

<a href='/admin/restaurants'>
  <button type="button" class="btn btn-primary">Manage Restaurants</button>
</a>

<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.email}}</td>
        <td>
          {{#if this.isAdmin}}
            Admin
          {{else}}
            User
          {{/if}}
        </td>
        <td>
          <form action="/admin/users/{{this.id}}?_method=PUT" method="POST" style="display: inline;">
            {{#if this.isAdmin}}
              <button type="submit" class="btn btn-link" name="role" value="0">Set as user</button>
            {{else}}
              <button type="submit" class="btn btn-link" name="role" value="1">Set as admin</button>
            {{/if}}
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>